# Auto-Commit Configuration
# Configuration file for bc-express auto-commit automation

# Commit message templates for different scenarios
COMMIT_TEMPLATES=(
    # Feature additions
    "feat(week%d): add new exercise implementation"
    "feat(week%d): introduce advanced concepts"
    "feat(docs): add comprehensive documentation"
    "feat(scripts): implement automation tools"
    
    # Bug fixes
    "fix(week%d): resolve exercise issues"
    "fix(config): correct configuration errors"
    "fix(docs): fix documentation inconsistencies"
    "fix(scripts): resolve automation bugs"
    
    # Documentation updates
    "docs(week%d): update tutorial content"
    "docs(readme): improve project documentation"
    "docs(guides): enhance technical guides"
    "docs(api): update API documentation"
    
    # Chores and maintenance
    "chore(deps): update project dependencies"
    "chore(config): update configuration files"
    "chore(scripts): maintain automation tools"
    "chore(structure): organize project files"
    
    # Testing
    "test(week%d): add comprehensive test coverage"
    "test(integration): implement integration tests"
    "test(e2e): add end-to-end testing"
    
    # Performance improvements
    "perf(week%d): optimize exercise performance"
    "perf(build): improve build performance"
    "perf(scripts): optimize automation scripts"
    
    # CI/CD updates
    "ci(github): update GitHub Actions workflow"
    "ci(automation): improve CI/CD pipeline"
    "ci(quality): enhance quality gates"
)

# File patterns to ignore for auto-commit
IGNORE_PATTERNS=(
    "*.log"
    "*.tmp"
    "node_modules/*"
    ".env*"
    "coverage/*"
    "dist/*"
    "build/*"
    ".DS_Store"
    "Thumbs.db"
)

# Maximum file size for auto-commit (in bytes)
MAX_FILE_SIZE=1048576  # 1MB

# Commit frequency settings
AUTO_COMMIT_ENABLED=true
COMMIT_INTERVAL_MINUTES=5
MAX_COMMITS_PER_HOUR=12

# Quality checks before commit
ENABLE_LINT_CHECK=true
ENABLE_TEST_CHECK=false  # Disabled by default for development
ENABLE_BUILD_CHECK=false # Disabled by default for development

# Notification settings
ENABLE_NOTIFICATIONS=false
NOTIFICATION_WEBHOOK=""

# Git settings
DEFAULT_BRANCH="main"
AUTO_PUSH=false  # Set to true to auto-push commits
REMOTE_NAME="origin"

# Logging configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
LOG_RETENTION_DAYS=30
MAX_LOG_FILES=10
